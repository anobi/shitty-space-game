function Player() {
	this.color = "#00A";
	this.position = {x: 0, y: 0};
	this.velocity = {x: 0, y: 0};
	this.size = {width: 0, height: 0};

	this.hitpoints = 0;
	this.shoting = false; //might need this one for beam weapons?
	this.reloading = false;
}

Player.prototype = {

	init: function(){
		this.color = "#00A";
		this.position.x = 220;
		this.position.y = 270;
		this.size.width = 32;
		this.size.height = 32;
	},

	update: function() {
		//contain player within the canvas boundaries
		this.position.x = (player.x + player.velocityx).clamp(0, CANVAS_WIDTH - player.width);
		this.position.y = (player.y + player.velocityy).clamp(0, CANVAS_HEIGHT - player.height);
	},

	shoot: function(){
		if(!reloading){
		var bulletPosition = this.midpoint();

		//reload lol
		setTimeout(this.reloading = false, 200);
		}
	},

	midpoint: function(){
		return {
			x: this.x + this.width/2,
			y: this.y + this.height/2
		};
	},

	explode: function() {
		this.active = false;
	},

	draw: function() {
		canvas.fillStyle = this.color;
		canvas.fillRect(this.position.x, this.position.y, this.size.width, this.size.height);
	}
}
